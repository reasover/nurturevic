    <script>
        let currentUser = null;
        let isCertified = false;

        function selectUser(userType) {
            currentUser = userType;
            
            // Hide selection screen
            document.getElementById('userSelection').style.display = 'none';
            
            // Show appropriate dashboard
            if (userType === 'student') {
                document.getElementById('studentDashboard').classList.add('active');
            } else {
                document.getElementById('teacherDashboard').classList.add('active');
            }
        }

        function goBack() {
            // Hide dashboards
            document.getElementById('studentDashboard').classList.remove('active');
            document.getElementById('teacherDashboard').classList.remove('active');
            
            // Show selection screen
            setTimeout(() => {
                document.getElementById('userSelection').style.display = 'flex';
            }, 100);
            
            currentUser = null;
        }

        function enterPhase(phaseNumber) {
            if (phaseNumber === 3) {
                showLockedMessage();
                return;
            }
            
            alert(`Entering Phase ${phaseNumber}! 🚀\n\nThis would open the detailed learning modules for this phase.`);
        }

        function showLockedMessage() {
            alert('🔒 This phase is locked!\n\nComplete the previous phases to unlock new content and continue your entrepreneurial journey.');
        }

        function startModule(moduleId) {
            alert('📚 Starting Module!\n\nThis would open the interactive learning content for this certification module.');
        }

        function openTool(toolName) {
            const toolMessages = {
                'ideaGenerator': '💡 Idea Generator\n\nThis tool would help students brainstorm and validate business ideas using structured prompts and frameworks.',
                'pitchBuilder': '🎤 Pitch Builder\n\nA step-by-step tool to help students create compelling presentations with templates and practice modes.',
                'teamFinder': '🤝 Team Finder\n\nConnect students with complementary skills for bootcamp collaboration.',
                'marketResearch': '📊 Market Research\n\nGuided tools to help students understand their target market and competition.',
                'lessonPlanner': '📋 Lesson Planner\n\nCreate structured entrepreneurship lessons with activities, assessments, and resources.',
                'businessCanvas': '🎨 Business Model Canvas\n\nInteractive Business Model Canvas tool adapted for secondary students.',
                'assessmentBuilder': '📝 Assessment Builder\n\nCreate rubrics and assessment tools for entrepreneurship projects.',
                'progressTracker': '📈 Progress Tracker\n\nMonitor individual and class progress through the program.',
                'launchvicFramework': '🎯 LaunchVic Framework\n\nAccess LaunchVic methodologies adapted for Year 9 level.',
                'resourceLibrary': '📚 Resource Library\n\nVideos, templates, case studies, and teaching materials.'
            };
            
            alert(toolMessages[toolName] || 'Tool coming soon!');
        }

        function showCertification() {
            if (!isCertified) {
                const certify = confirm('🎓 Certification Check\n\nHave you completed all 6 modules of the NurtureVic certification program?\n\nClick OK if you are ready to claim your certification badge!');
                
                if (certify) {
                    isCertified = true;
                    document.getElementById('certBadge').innerHTML = '🥇';
                    document.getElementById('certBadge').title = 'Certified NurtureVic Entrepreneurship Educator!';
                    alert('🎉 Congratulations!\n\nYou are now a certified NurtureVic Entrepreneurship Educator!\n\nYour certification badge has been updated and you can now access advanced teaching tools.');
                }
            } else {
                alert('🥇 Certification Badge\n\nYou are a certified NurtureVic Entrepreneurship Educator!\n\nCertification Date: ' + new Date().toLocaleDateString() + '\nValid until: ' + new Date(Date.now() + 365*24*60*60*1000).toLocaleDateString());
            }
        }

        // Add some interactive elements on load
        window.addEventListener('load', function() {
            // Animate logo
            const logo = document.querySelector('.logo');
            logo.style.animation = 'slideIn 1s ease';
            
            // Add hover effects to user cards
            const userCards = document.querySelectorAll('.user-card');
            userCards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-10px) scale(1.02)';
                });
                
                card.addEventListener('mouseleave', function() {
                    if (!this.classList.contains('selected')) {
                        this.style.transform = 'translateY(0) scale(1)';
                    }
                });
            });
        });
    </script>
</body>
